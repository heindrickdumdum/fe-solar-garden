<div class="page-width page-content">

  {%- render 'breadcrumbs' -%}

  <header class="section-header text-center{% if cart.item_count == 0 %} section-header--404{% endif %}">
    {%- if cart.item_count == 0 -%}
    <h1 style="font-weight: 700;" class="section-header__title">Your Cart Is Empty</h1>
    {%- else -%}
    <h1 style="font-weight: 700;" class="section-header__title">Your Cart ({{cart.item_count}})</h1>
    {%- endif -%}
    <div class="rte text-spacing">
      {%- if cart.item_count == 0 -%}
      {% comment %} <p>{{ 'cart.general.empty' | t }}</p> {% endcomment %}
      <div class="hero-ratings-wrapper justify-center">
        {% if shop.metafields.loox["global_stats"] %}
          {% assign looxstats = shop.metafields.loox["global_stats"] | split: ',' %} 
          <div class="loox-rating loox-rating-hp" data-rating="{{ looxstats[0] }}" data-raters="{{ looxstats[1] }}"></div>
          <span class="underline">{{looxstats[0]}}/5 - Based on {{ looxstats[1] }} Reviews</span>
        {% endif %}
      </div>
      {%- endif -%}



    </div>
  </header>

  {%- if cart.item_count > 0 -%}
  <form action="{{ routes.cart_url }}" method="post" novalidate data-location="page" id="CartPageForm">
    <div class="cart__page">
      <div data-products class="cart__page-col">
        <div class="cart__item small--hide">
          <div class="cart__image cc">
            Products
          </div>
          <div class="cart__item-details">
            <div class="cart__item-title vg">
              <div class="cart__item--variants">
                <div><span>Size:</span> 0-3m</div>
              </div>
              <div class="cart__item--variants">

              </div>

            </div>
            <div class="cart__item-sub vbg">
              <div class="small--hide">
                Quantity
              </div>

              <div class="cart__item-price-col text-right">
                Total
              </div>
            </div>
          </div>
        </div>
        {% for item in cart.items %}

        {%- render 'cart-item', product: item -%}
        {%- endfor -%}
      </div>
      <div class="cart__page-col">

        <div class="clmm">
          <div class="clm">

            {% if settings.cart_notes_enable %}
            <div>
              <label for="CartNote">is this order a gift?&nbsp;&nbsp; Yes / No</label>
              <textarea name="note" class="input-full cart-notes" id="CartNote">{{ cart.note }}</textarea>
            </div>
            {% endif %}

            <div data-discounts>
              {% if cart.cart_level_discount_applications != blank %}
              <div class="cart__discounts cart__item-sub cart__item-row">
                <div>{{ 'cart.general.discounts' | t }}</div>
                <div class="text-right">
                  {% for cart_discount in cart.cart_level_discount_applications %}
                  <div class="cart__discount">
                    {{ cart_discount.title }} (-{{ cart_discount.total_allocated_amount | money }})
                  </div>
                  {% endfor %}
                </div>
              </div>
              {% endif %}
            </div>



            {% if settings.cart_terms_conditions_enable %}
            <div class="cart__item-row cart__terms">
              <input type="checkbox" id="CartTerms" class="cart__terms-checkbox">
              <label for="CartTerms">
                {% if settings.cart_terms_conditions_link != blank %}
                {{ 'cart.general.terms_html' | t: url: settings.cart_terms_conditions_link }}
                {% else %}
                {{ 'cart.general.terms' | t }}
                {% endif %}
              </label>
            </div>
            {% endif %}


            <div class="cart__shipping rte">Congrats! You qualify for FREE Aussie delivery.
            </div>
            <div class='nvd-mini'></div>
            <div class="cart__item-sub cart__item-row rb">
              <div class="sbb" style="    font-weight: 600;">Subtotal</div>
              <div class="suub nvd-subtotal" data-subtotal>{{ cart.total_price | money }}</div>
            </div>
            <div class="cart__item-row cart__checkout-wrapper">

              <div class="st text-center">
                <button type="submit" name="checkout" data-terms-required="{{ settings.cart_terms_conditions_enable }}"
                  class="btn cart__checkout w-full max-w-none">
                  {{ 'cart.general.checkout' | t }} - <span class="nvd-subtotal">{{ cart.total_price | money }}</span>
                </button>

              </div>

              {% if additional_checkout_buttons and settings.cart_additional_buttons %}
              <div class="additional-checkout-buttons">{{ content_for_additional_checkout_buttons }}</div>
              {% endif %}

            </div>
          </div>
        </div>


        <div class="cart__item-row text-center">
          <p class="flx items-center justify-center"><img style="width: 30px;"
              src="{{ 'icon-guarantee-check.png' | asset_url }}" alt="100 Day Risk Free Trial"> 100 Day Risk Free Trial
          </p>
        </div>
      </div>
    </div>
  </form>
  {%- else -%}

  {%- endif -%}


</div>


<style>
  .page-width.page-content {
    padding-top: 20px;
  }

  .section-header.text-center {
    margin-bottom: 40px;
  }

  @media only screen and (min-width: 769px) {
    .section-header.text-center {
      margin-bottom: 60px;
    }

    .section-header__title {
      font-size: 32px;
    }

    .cart__item-name {
      font-weight: 600;
      font-size: 18px;
      font-weight: 900;
    }

    .js-qty__num {
      padding: 10px 21px;
      border-radius: 15px;
    }

    .js-qty__wrapper {
      display: inline-block;
      position: relative;
      max-width: 115px;
      min-width: 90px;
    }

    .cart__item-sub.vbg {
      margin-left: 40px;
    }

    .cart__item-sub {
      align-items: baseline;
      font-size: 18px;
      margin-bottom: 30px;
    }

    .cart__page-col:first-child {
      border-bottom: 1px solid #dedede;
    }
  }

  @media only screen and (max-width: 769px) {
    .cart__image {

      flex: 0 0 145px;
      margin-right: 10px;

    }

    .cart__item-name {
      font-weight: 900;
      font-size: 18px;
    }

    .js-qty__wrapper {
      display: inline-block;
      position: relative;
      max-width: 100px;
    }

    .js-qty__num {
      padding: 10px 16px;
      border-radius: 15px;
    }

    .cart__item-price-col.text-right {
      margin-top: 12px;
      font-size: 18px;
    }

    .cart__page-col:last-child {
      border-top: 1px solid rgba(222, 222, 222, 1);
      padding-top: 30px;
      margin-top: 25px;
    }

    .section-header__title {
      font-size: 20px;
      text-align: left;
    }
  }

  @media only screen and (min-width: 769px) {
    .cart__item-sub.vbg {
      font-size: 14px;
    }

    .cart__item-sub {
      margin-bottom: 5px;
    }

  }

  @media only screen and (max-width: 769px) {
    .cart__item.small--hide {
      display: flex !important;
      padding-bottom: 10px;
      margin-top: -25px;
    }

    .cart__item-sub.vbg {
      justify-content: flex-end;
    }

    .cart__item-title.vg {
      opacity: 0;
      display: none;
    }

    .cart__image {
      font-size: 14px;
    }

    .cart__item-sub.vbg .cart__item-price-col.text-right {
      font-size: 14px;
    }

    .cart__item-sub.cart__item-row.rb {
      font-size: 18px;
      justify-content: end;
    }

    .sbb {
      margin-right: 100px !important;
    }

    .cart__item-row.cart__checkout-wrapper {
      text-align: right;
    }
  }

  .js-qty__wrapper {
    margin-right: 10px;
  }

  .cart__shipping.rte {
    font-size: 14px;
    text-align: right;
    margin-top: 20px;
  }

  .grid-product__price--original {
    margin-right: 8px;
    display: inline-block;
  }

  span.grid-product__price--savings {
    display: inline-block;
  }

  @media only screen and (max-width: 769px) {
    .js-qty__num {
      padding: 8px 16px;

    }

    .js-qty__wrapper {
      max-width: 88px;
    }

    .grid-product__price {
      margin-top: -5px;
    }

    span.grid-product__price--savings {
      display: block;
      margin-bottom: 10px;
      font-size: 14px;
      padding: 4px;
      width: 80px;
    }

    .cart__item-name {
      font-weight: 900;
      font-size: 15px;
    }

    .grid-product__price {
      font-size: 16px;
    }

    .grid-product__price--original {
      font-size: 13px;
    }
  }

  .cart__item--variants {
    display: none;
  }

  @media only screen and (min-width: 769px) {
    span.grid-product__price--savings {
      margin-top: 0px;
    }

  }
</style>
{% schema %}
{
"name": "Cart page"
}
{% endschema %}
